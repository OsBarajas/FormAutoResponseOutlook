        }
        .navbar img {
            height: 50px;
            transition: opacity 0.5s ease;
        }
        .navbar:hover {
            background-color: rgba(30, 58, 138, 0);
        }
        .navbar:hover img {
            opacity: 1;
        }
        .navbar .left-content {
            display: flex;
            align-items: center;
        }
        .navbar .left-content p {
            color: white;
            margin-left: 20px;
            font-size: 18px;
            opacity: 1;
            transition: opacity 0.5s ease;
        }
        .navbar:hover .left-content p {
            opacity: 0;
